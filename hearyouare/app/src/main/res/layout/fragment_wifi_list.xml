<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view_action_progress"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ProgressBar
            android:alpha="0.2"
            android:id="@+id/progresscircle_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:alpha="0.2"
            android:layout_below="@id/progresscircle_wifi"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:text="@string/action_progress_wifi"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <com.example.dsm_025.hearyouare.Component.MyRecyclerView
        android:id="@+id/recyclerview_wifi"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>